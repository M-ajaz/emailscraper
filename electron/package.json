{
  "name": "mail-scraper",
  "version": "1.0.0",
  "description": "Offline Recruitment Mail Scraper â€” Protingent India LLP",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "prebuild:win": "python build-backend.py && cd ../frontend && npm run build",
    "build:win": "electron-builder --win",
    "prebuild:mac": "python3 build-backend.py && cd ../frontend && npm run build",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac"
  },
  "build": {
    "appId": "com.protingent.mailscraper",
    "productName": "Mail Scraper",
    "copyright": "Protingent India LLP",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "main.js",
      "splash.html",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**",
          "!*.pyc",
          "!.env"
        ]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend-dist/mailscraper-backend",
        "to": "backend-dist/mailscraper-backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mail Scraper",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "Mail Scraper",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1",
    "electron-icon-builder": "^2.0.1"
  }
}
